<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeMain"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/purpleheart">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="Affiliated Patient:"
            android:background="#44444444"/>
        <TextView
            android:id="@+id/affiliatedPatNameRMTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="Ali Usman"
            android:background="#44444444"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="ID:"
            android:background="#44444444"/>
        <TextView
            android:id="@+id/affiliatedPatIDRMTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="123"
            android:background="#44444444"/>
    </LinearLayout>
    <Button
        android:id="@+id/viewHistoryBtnRM"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/androidbtn"
        android:text="View History"
        android:textColor="@color/font"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/viewECGBtnRM"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/androidbtn"
        android:text="View ECG"
        android:textColor="@color/font"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/logoutBtnRM"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/androidbtn"
        android:text="Logout"
        android:textColor="@color/font"
        android:textSize="20sp"/>
</LinearLayout>