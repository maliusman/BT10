<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeHistory"
    android:orientation="vertical"
    android:background="@drawable/purpleheart"
    android:paddingHorizontal="4dp"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/relativeHistoryHeadingTxt"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Affiliated Patient History"
        android:textSize="35sp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="Affiliated Patient:"
            android:background="#44444444"/>
        <TextView
            android:id="@+id/affiliatedPatNameRHTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:text="Ali Usman"
            android:background="#44444444"/>
    </LinearLayout>
    <TextView
        android:id="@+id/patHistoryRHTxt"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:textColor="@color/font"
        android:inputType="textMultiLine"
        android:background="#9999"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        />
</LinearLayout>