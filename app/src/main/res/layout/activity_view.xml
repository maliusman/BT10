<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/purpleheart"
    tools:context=".MainActivity">
<!---
    <TextView
        android:id="@+id/dataTxt"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="#7777"
        android:textSize="20sp"

        />-->
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/ecgGV"
        android:paddingLeft="10dp"/>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <TextView
        android:id="@+id/currentBPMTxt"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:background="#000000"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="0dp"
        android:textColor="#00ff00"
        android:textSize="13sp"
        android:text="Heart Rate" />
    <TextView
        android:id="@+id/RRTimeTxt"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:background="#000000"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginLeft="0dp"
        android:textColor="#00ff00"
        android:textSize="13sp"
        android:text="R-R interval"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Chronometer
            android:id="@+id/sessionLenCh"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginRight="0dp"
            android:textColor="#00ff00"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:textColor="#00ff00"
            android:textSize="13sp"
            android:text="Date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
    <Button
        android:id="@+id/stopECGBtnV"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/androidbtn"
        android:text="stop ECG"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"/>
    <Button
        android:id="@+id/disconnectBtnV"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/androidbtn"
        android:text="Disconnect"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"/>
</LinearLayout>
</LinearLayout>
